@model Customer
@{
    Layout = "~/Views/Share/Shared/_SharedLayout.cshtml";
    ViewData["Title"] = "Join Today!";
}
<section class="container pt-2">
    <p class="fs-2">Sign up for text updates from @Model.Organization.Name</p>
</section>
<section class="container p-3">
    <form asp-action="Subscribe" asp-controller="Share" asp-route-id="@Model.OrganizationId">
        @Html.HiddenFor(x => x.OrganizationId)
        <div class="mb-3">
            <div class="row">
                <div class="col">
                    <label asp-for="@Model.FirstName" class="form-label"></label>
                    <input asp-for="@Model.FirstName" class="form-control" required>
                </div>
                <div class="col">
                    <label asp-for="@Model.LastName" class="form-label"></label>
                    <input asp-for="@Model.LastName" class="form-control" required>
                </div>
            </div>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.PhoneNumber" class="form-label"></label>
            <input asp-for="@Model.PhoneNumber" type="tel" class="form-control" required>
        </div>
        @if(Model.Facebook != null)
        {
            <a class="btn btn-primary" href="https://www.facebook.com/@Model.Facebook.AppId">Facebook</a>
        }
        @if(Model.Twitter != null)
        {
            <a class="btn btn-primary" href="https://www.twitter.com/@Model.Twitter.UserScreenName">Twitter</a>
        }
        @*        <div class="mb-3">
            <label asp-for="@Model.Email" class="form-label"></label>
            <input asp-for="@Model.Email" class="form-control" placeholder="name@example.com">
        </div>*@
        <div class="mb-3">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="Checked" required>
                <label class="form-check-label" for="flexCheckChecked">
                    By checking this box you agree to our <a asp-action="Privacy" asp-controller="Home">Privacy Policy</a> and <a asp-action="Privacy" asp-controller="Home">Terms of Service</a>.
                </label>
            </div>
        </div>
        <div class="mb-3">
            <input type="submit" class="btn btn-lg btn-primary" value="Sign Up" />
        </div>
    </form>

</section>
