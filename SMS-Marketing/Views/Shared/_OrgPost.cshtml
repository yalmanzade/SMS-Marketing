
<section class="container">
    <form asp-controller="Organization" asp-action="SubmitPost" method="post" enctype="multipart/form-data">
        <input name="id" type="hidden" value="@Model.Id" />
        <div class="input-group">
            <span class="input-group-text">New Post</span>
            <textarea class="form-control" aria-label="New Post" id="postText" name="postText"></textarea>
        </div>
        <div class="form-group">
            <label for="formFileLg" class="form-label">Add an Image</label>
            <input class="form-control form-control-lg" id="postPicture" name="postPicture" type="file">
        </div>
        @{
            if (Model.IsSMS)
            {
                <div class="input-group">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="IsSMS">
                        <label class="form-check-label" for="flexCheckDefault">
                            SMS Message
                        </label>
                    </div>
                </div>
            }
            if (Model.IsTwitter)
            {
                <div class="input-group">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="IsTwitter">
                        <label class="form-check-label" for="flexCheckDefault">
                            Twitter
                        </label>
                    </div>
                </div>
            }
            if (Model.IsFacebook)
            {
                <div class="input-group">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="IsFacebook">
                        <label class="form-check-label" for="flexCheckDefault">
                            Facebook
                        </label>
                    </div>
                </div>
            }
        }
        <button class="btn btn-primary">
            Submit
        </button>
    </form>
</section>
