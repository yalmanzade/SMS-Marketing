@model Organization
@{
    ViewData["Title"] = "User Management";
}
<section class="container">
    <partial name="../Organization/Shared/_Greeting.cshtml" for="@Model" />
</section>
<section class="container mb-2">
    <ul class="nav nav-tabs">
        <li class="nav-item">
            <a class="nav-link" asp-action="Index" asp-controller="Organization" asp-route-id="@Model.Id">Posts</a>
        </li>
        <li class="nav-item">
            <a class="nav-link active" aria-current="page" asp-action="UserManagement" asp-controller="Organization" asp-route-id="@Model.Id">User Management</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-action="Customers" asp-controller="Organization" asp-route-id="@Model.Id">Customers</a>
        </li>
        <!--<li class="nav-item">
            <a class="nav-link" asp-action="Groups" asp-controller="Organization" asp-route-id="@Model.Id">Groups</a>
        </li>-->
        <li class="nav-item">
            <a class="nav-link" asp-action="Insights" asp-controller="Organization" asp-route-id="@Model.Id">Insights</a>
        </li>
    </ul>
</section>
<section class="container">
    @{
        if (Model.CurrentUser.IsUserManagement)
        {
            <div class="row">
                <div class="col">
                    <partial name="../Organization/Shared/_AddUser.cshtml" for="@Model" />
                </div>
                <div class="col">
                    <partial name="../Organization/Shared/_OrganizationUsers.cshtml" for="@Model" />
                </div>
            </div>
        }
        else
        {
            <div class="row">
                <div class="col">
                    <partial name="../Organization/Shared/_NoAccess.cshtml" for="@Model.ManagerName" />
                </div>
            </div>
            
        }   
    }

</section>
